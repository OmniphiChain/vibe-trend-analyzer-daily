# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# PostgreSQL connection string (Neon, Supabase, or local PostgreSQL)
# Example: postgresql://username:password@host:5432/database_name
DATABASE_URL=

# ============================================================================
# AUTHENTICATION & SECURITY
# ============================================================================

# JWT Secret Keys (MUST be changed in production!)
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production

# Session secret for express-session
SESSION_SECRET=your-super-secret-session-key-change-in-production

# ============================================================================
# CORS & SECURITY
# ============================================================================

# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5000

# ============================================================================
# EXTERNAL API KEYS
# ============================================================================

# NewsAPI (https://newsapi.org)
NEWSAPI_KEY=

# CoinMarketCap (https://coinmarketcap.com/api/)
COINMARKETCAP_API_KEY=

# Twitter/X API (https://developer.twitter.com)
TWITTER_BEARER_TOKEN=

# Finnhub (https://finnhub.io)
FINNHUB_API_KEY=

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

# Environment (development, production, test)
NODE_ENV=development

# Server port
PORT=5000

# ============================================================================
# AI/NLP SERVICE
# ============================================================================

# NLP Service URL (if running separately)
NLP_SERVICE_URL=http://localhost:8000

# OpenAI API Key (if using OpenAI for AI features)
OPENAI_API_KEY=

# ============================================================================
# EMAIL SERVICE (for password reset, notifications)
# ============================================================================

# SendGrid (recommended - https://sendgrid.com)
SENDGRID_API_KEY=

# AWS SES (alternative)
# Note: Also requires AWS_ACCESS_KEY_ID and AWS_SECRET_ACCESS_KEY below

# Email From Address
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=Vibe Trend Analyzer

# SMTP Configuration (legacy fallback)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# ============================================================================
# MONITORING & LOGGING
# ============================================================================

# Sentry DSN for error tracking
SENTRY_DSN=

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# ============================================================================
# RATE LIMITING
# ============================================================================

# Redis URL for distributed rate limiting (optional)
REDIS_URL=

# ============================================================================
# FILE STORAGE
# ============================================================================

# AWS S3 for file uploads (optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_REGION=us-east-1

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable/disable features
ENABLE_WEBSOCKETS=true
ENABLE_AI_FEATURES=true
ENABLE_EMAIL_NOTIFICATIONS=false

# ============================================================================
# FRONTEND URL (for email links)
# ============================================================================

FRONTEND_URL=http://localhost:5173

# ============================================================================
# UPLOAD SETTINGS
# ============================================================================

UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
